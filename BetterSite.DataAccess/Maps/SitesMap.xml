  <statements>
    <insert id="Tab_Sites_Insert" parameterClass="BetterSite.Domain.M_Sites">
      INSERT INTO  Tab_Sites  (SiteId,SiteCode,SiteName,SiteUrl,TypeId,SiteAddDate,SiteIsTop,SiteIsHome,SiteClickQuantity,SiteFavoriteQuantity,SiteApproveQuantity,SiteOrderNumber,SiteIsActive)
      VALUES (#SiteId#,#SiteCode#,#SiteName#,#SiteUrl#,#TypeId#,#SiteAddDate#,#SiteIsTop#,#SiteIsHome#,#SiteClickQuantity#,#SiteFavoriteQuantity#,#SiteApproveQuantity#,#SiteOrderNumber#,#SiteIsActive#)
    </insert>
    <update id="Tab_Sites_Update" parameterClass="BetterSite.Domain.M_Sites">
      UPDATE  Tab_Sites  SET SiteCode= #SiteCode#,SiteName= #SiteName#,SiteUrl= #SiteUrl#,TypeId= #TypeId#,SiteAddDate= #SiteAddDate#,SiteIsTop= #SiteIsTop#,SiteIsHome= #SiteIsHome#,SiteClickQuantity= #SiteClickQuantity#,SiteFavoriteQuantity= #SiteFavoriteQuantity#,SiteApproveQuantity= #SiteApproveQuantity#,SiteOrderNumber= #SiteOrderNumber#,SiteIsActive= #SiteIsActive#
      WHERE SiteId= #SiteId#
