    <delete id="Tab_Sites_Delete" parameterClass="Hashtable">
      DELETE FROM  Tab_Sites  WHERE SiteId= #SiteId#
    </delete>
    <select id="Tab_Sites_Select" listClass="ArrayList" resultMap="Tab_Sites_Result" parameterClass="Hashtable">
      SELECT SiteId,SiteCode,SiteName,SiteUrl,TypeId,SiteAddDate,SiteIsTop,SiteIsHome,SiteClickQuantity,SiteFavoriteQuantity,SiteApproveQuantity,SiteOrderNumber,SiteIsActive FROM  Tab_Sites
