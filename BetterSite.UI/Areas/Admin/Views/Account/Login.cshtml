@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>优站分享-管理登录</title>
    <style>
         body {
        background-color:#336699 ;
    }
    #loginForm {
        margin: auto;
        width: 300px;      
        padding-top: 120px;
    }
        input {
        margin:10px 50px 10px 50px;
        width:200px;
        height:30px;
        }
        h2,h4{
        color:#b7b7b7;
        }
    </style>
</head>
<body>
    <div id="loginForm">
        <h2>优站分享 管理平台</h2>
          <h4>--IShareSite.com</h4>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>登录</legend>
                <div><input type="text" name="userName" required="required" placeholder="用户名" /></div>
                <div><input type="password" name="password" required="required" placeholder="密码" /></div>
                @*<li>
                        <input type="checkbox" name="rememberMe" />
                        <label>记住密码</label>
                    </li>*@
                <div><input type="submit" value="确定" /></div>
            </fieldset>
        }
    </div>
    <script>
        window.onload = function(){ 
            document.getElementsByName("userName")[0].focus();
        }; 
    </script>
</body>
</html>
