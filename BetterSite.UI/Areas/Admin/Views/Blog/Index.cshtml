       rownumbers="true" fitcolumns="true" singleselect="true">
    <thead>
        <tr>
            <th field="Id"height="30">Id</th>
            @*<th field="Category" width="50" formatter="ToCategoryName">类别Id</th>*@
            <th field="CategoryName" width="30">类别</th>
