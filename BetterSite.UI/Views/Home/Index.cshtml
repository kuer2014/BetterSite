<div class="">
    <div class="home_site">
        <h2><span>免费素材</span></h2>
        <div class="divhr"></div>
        <ul class="home_sitetype">
            @foreach (var item in ViewBag.ZY)
            {
                <li>
                    <div class="pic">
                      
