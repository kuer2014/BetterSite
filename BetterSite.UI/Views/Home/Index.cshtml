        height: 50px;
        /*margin: 10px 0 0 10px;*/
      
    }
    .home_site .pic a{
        display:block;
        margin:10px 5px;
      font-size: 35px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        text-align:center;
    }
    .home_site .incon {
        float: right;
        width: 160px;
        height:50px;
