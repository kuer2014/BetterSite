@model BetterSite.Domain.M_Blog
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Title | 我的世界</title>
    <link href="~/Content/blogstyle.css" rel="stylesheet" />
</head>
<body>
    <div class="body">
        <div class="detail">
            <div class="title"><h2>@Model.Title</h2></div>
            <div class="content">
                @Html.Raw(Model.Content)
            </div>
            <div class="writedate">@Convert.ToDateTime(Model.CreateDate).ToString("yy.M.d")</div>
        </div>
        <div class="footer">
            <a href="/blog" >Home</a> <a>|</a>
            <a href="/blog/about">About</a>
        </div>
    </div>
</body>
</html>
