@model IList<BetterSite.Domain.M_DoubanRank>
   <style>
       .douban a {
       
        color:#62bee3; text-decoration:none;
       }
       .douban a:hover { color:#555; }
       .douban li {
       margin-bottom:10px;
       }
       .douban h3 {
       margin:5px;
       }
       .douban span {
       margin-right:10px;
       }
   </style>
<div class="article douban">
    <h2>@ViewBag.Title </h2>
   
       
            @if (Model.Count > 0)
            {
                <span>更新时间：@Model[0].CreateDate</span>
                <p>
                    <ol>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];

                            <li>
                                <div><b>@(i + 1)</b></div>
                                <div>
                                    <h3>
                                        <a href="@item.Url" title="@item.Title" target="_blank">《@Html.DisplayFor(modelItem => item.Title)》</a>
                                    </h3>
                                </div>
                                <span>
                                    评分：  @Html.DisplayFor(modelItem => item.RatingNum) 
                                </span>
                                <span>
                                     评价人数： @Html.DisplayFor(modelItem => item.RatingPeople) 
                                </span>
                                <div>
                                    链接：@Html.DisplayFor(modelItem => item.Url)
                                </div>
                            </li>
                        }
                    </ol>
                </p>
            }

                
    </div>
