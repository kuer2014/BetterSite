@{
    Layout = null;
}
@model  IList<BetterSite.Domain.M_Tags>
<!DOCTYPE html>
<html>
<head>
    <title>_TagCrtl</title>
    <style type="text/css">
        .Tags-Block {
            background-color: #f1f1f1;
            padding: 10px 10px 0 10px;
        }

        .Tag-Single {
            display: inline-block;
        }
    </style>

</head>
<body>
    <div class="Tags-Block">
        @using (Html.BeginRouteForm("Site",FormMethod.Get))
        {
            if (ViewBag.CheckdTags != null)
            {
                foreach (var item in Model)
                {
                    if (ViewBag.CheckdTags.Contains(item.TagName))
                    {
                        <div class="Tag-Single">
                            <input id="@item.TagId" name="Tag" value="@item.TagName" type="checkbox" checked="checked" />
                            <label for="@item.TagId">@item.TagName</label>
                        </div>
                    }
                    else
                    {
                        <div class="Tag-Single">
                            <input id="@item.TagId" name="Tag" value="@item.TagName" type="checkbox" />
                            <label for="@item.TagId">@item.TagName</label>
                        </div>
                    }
                }
            }
            else
            { 
                foreach (var item in Model)
                {
                    <div class="Tag-Single">
                        <input id="@item.TagId" name="Tag" value="@item.TagName" type="checkbox" />
                        <label for="@item.TagId">@item.TagName</label>
                    </div>
                }
            }
            @*<input type="submit" value="提交" />*@
        }
    </div>
</body>
</html>
